<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.nyu.cs9033.eta.controllers.ViewTripActivity">


    <TextView
        android:id="@+id/textView_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="@string/trip_name"
        android:textColor="#4354ff"
        android:textSize="20sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/view_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:ems="12"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="@string/trip_description"
        android:textColor="#4354ff"
        android:textSize="20sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/view_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:ems="12"
        android:inputType="text" />


    <TextView
        android:id="@+id/textView_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="@string/trip_date"
        android:textColor="#4354ff"
        android:textSize="20sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/view_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:ems="12"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="@string/trip_time"
        android:textColor="#4354ff"
        android:textSize="20sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/view_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:ems="12"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="@string/trip_location"
        android:textColor="#4354ff"
        android:textSize="20sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/view_location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:ems="12"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="@string/trip_friend"
        android:textColor="#4354ff"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/view_friend"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:ems="12"
        android:inputType="text" />

    <LinearLayout
        android:id="@+id/footerBtnView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <Button
            android:id="@+id/startTrip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ff00ddff"
            android:text="@string/start_trip"
            android:textStyle="bold" />

        <Button
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ff0099cc"
            android:text="@string/back"
            android:textStyle="bold" />

        <Button
            android:id="@+id/stopTrip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ff33b5e5"
            android:text="@string/stop_trip"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>
